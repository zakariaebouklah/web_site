{% extends 'base.html.twig' %}

{% block title %}Inscription...{% endblock %}

{% block main %}

    <main class="main mt-40">

        {% if not form %}

            <div class="m-5 w-1/2 small:p-5 relative small:top-24 left-1/2 small:-translate-y-1/4 translate-y-1/4 -translate-x-1/2 h-80 small:h-64 shadow-3xl rounded-xl dark:border-2 dark:border-green-500 flex flex-col justify-evenly items-center">
                <p class="text-xl text-center small:text-xs font-bold hover:text-green-500">Vous êtes déjà inscrit dans la formation</p>
                <img src="{{ asset('images/valide.png') }}" alt="déjaInscrit" class="w-32 h-32 small:w-16 small:h-16">
            </div>

            <div class="h-7 mt-7"></div>
        {% else%}

            <div class="m-5 h-full">
                {{ form_start(form, {
                    'attr': {
                        'class': 'ml-16 mr-16 shadow-3xl dark:border-2 dark:border-secondary rounded-xl h-full'
                    }
                }) }}
                <div class="p-5 flex flex-col justify-between">
                    <label class="text-xl text-blue-700 dark:text-secondary">Nom et Prénom</label>
                    {{ form_widget(form.fullName , {
                        'attr': {
                            'placeholder': 'Nom complet',
                            'class': 'mb-10 bg-black/5 justify-between p-5 focus:outline-none shadow-inner rounded-xl dark:border-2 dark:border-secondary w-full'
                        }
                    }) }}
                    <label class="text-xl text-blue-700 dark:text-secondary">Adresse e-mail institutionnel</label>
                    {{ form_widget(form.UMPMail , {
                        'attr': {
                            'placeholder': 'adresse mail...',
                            'class': 'mb-10 bg-black/5 justify-between p-5 focus:outline-none shadow-inner rounded-xl dark:border-2 dark:border-secondary w-full'
                        }
                    }) }}
                    <label class="text-xl text-blue-700 dark:text-secondary">Numéro de téléphone</label>
                    {{ form_widget(form.phone , {
                        'attr': {
                            'class': 'mb-10 bg-black/5 justify-between p-5 focus:outline-none shadow-inner rounded-xl dark:border-2 dark:border-secondary w-full'
                        }
                    }) }}
                    <label class="text-xl text-blue-700 dark:text-secondary">Laboratoire  d'attache</label>
                    {{ form_widget(form.homeLaboratory , {
                        'attr': {
                            'class': 'mb-10 bg-black/5 justify-between p-5 focus:outline-none shadow-inner rounded-xl dark:border-2 dark:border-secondary w-full'
                        }
                    }) }}
                    <label class="text-xl text-blue-700 dark:text-secondary">Etablissement d'attache relevant du Pôle thématique Droit, Economie et gestion de l'Université Mohammed Premier</label>
                    {{ form_widget(form.homeInstitution , {
                        'attr': {
                            'class': 'mb-10 bg-black/5 justify-between p-5 shadow-inner rounded-xl dark:border-2 dark:border-secondary w-full'
                        }
                    }) }}
                    <label class="text-xl text-blue-700 dark:text-secondary">Thème de recherche</label>
                    {{ form_widget(form.searchTheme , {
                        'attr': {
                            'class': 'mb-10 bg-black/5 justify-between p-5 focus:outline-none shadow-inner rounded-xl dark:border-2 dark:border-secondary w-full'
                        }
                    }) }}
                    <label class="text-xl text-blue-700 dark:text-secondary">Année d'inscription au cycle doctoral</label>
                    {{ form_widget(form.inscriptionYear , {
                        'attr': {
                            'class': 'mb-10 bg-black/5 justify-between p-5 shadow-inner rounded-xl dark:border-2 dark:border-secondary w-full'
                        }
                    }) }}
                    <label class="text-xl text-blue-700 dark:text-secondary">Ateliers de formation : Vous pouvez vous inscrire à autant d'ateliers que vous voulez</label>
                    {{ form_widget(form.ateliersDeFormation , {
                        'attr': {
                            'class': 'mb-10 bg-black/5 justify-between p-5 shadow-inner rounded-xl dark:border-2 dark:border-secondary w-full'
                        }
                    }) }}

                    <button type="submit" class="mt-3 text-primary font-bold bg-secondary rounded-xl hover:bg-[#D19900] w-[95px] h-10">Envoyer</button>

                </div>
                {{ form_end(form) }}
            </div>
        {% endif %}

    </main>

{% endblock %}

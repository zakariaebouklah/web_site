{% extends 'base.html.twig' %}

{% block title %}

    {% if edit %}
        Modifications...
    {% else %}
        Nouvelle Édition OnBoarding-Doctoring
    {% endif %}

{% endblock %}

{% block main %}

    <main class="main mt-40">
        <div class="mx-5 my-9 h-full">
            {{ form_start(form, {
                'attr': {
                    'class': 'relative ml-16 mr-16 shadow-3xl dark:bg-white/5 rounded-xl h-full'
                }
            }) }}
            <img src="{{ asset('images/new-formation.png') }}" alt="brand-edition" class="w-16 h-16 small:w-10 small:h-10 absolute -top-5 -right-7 small:-right-2 small:-top-5">
            <div class="p-5 flex flex-col justify-between">
                {{ form_row(form.title , {
                    label: 'Titre',
                    'attr': {
                        'class': 'mb-10 bg-black/5 flex flex-row justify-between p-2 focus:outline-none shadow-inner rounded-xl dark:bg-white/10 w-full'
                    }
                }) }}
                {{ form_row(form.description , {
                    label: 'Description',
                    'attr': {
                        'class': 'mb-10 bg-black/5 flex flex-row justify-between p-2 focus:outline-none shadow-inner rounded-xl dark:bg-white/10 w-full'
                    }
                }) }}
                {{ form_row(form.card , {
                    label: 'Fiche présentative de la formation',
                    'attr': {
                        'class': 'mb-10 bg-black/5 flex flex-row justify-between pl-2 shadow-inner rounded-xl dark:bg-white/10 w-full'
                    }
                }) }}
                {{ form_row(form.dateDebut , {
                    label: 'Début des inscriptions',
                    'attr': {
                        'class': 'dark:text-green-500 mb-10 bg-black/5 flex flex-row justify-evenly pl-2 shadow-inner rounded-xl dark:bg-white/10 font-bold w-full'
                    }
                }) }}
                {{ form_row(form.dateFin , {
                    label: 'Fin des inscriptions',
                    'attr': {
                        'class': 'dark:text-green-500 mb-10 bg-black/5 flex flex-row justify-evenly pl-2 shadow-inner rounded-xl dark:bg-white/10 font-bold w-full'
                    }
                }) }}

                <button type="submit" class="mt-3 text-primary bg-secondary rounded-xl hover:bg-[#D19900] font-bold w-[95px] h-10">
                    {% if edit %}
                        Enregistrer
                    {% else %}
                        Ajouter
                    {% endif %}
                </button>

            </div>
            {{ form_end(form) }}
        </div>
    </main>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}

    {% if edit %}
        Modification
    {% else %}
        Nouveau Evenement
    {% endif %}

{% endblock %}

{% block main %}

    <main class="main">
        <div class="mt-15 h-16"></div>

        {{ form_start(form, {
            'attr': {
                'class': 'ml-16 mr-16 shadow-3xl dark:border-2 dark:border-secondary rounded-xl h-full'
            }
        }) }}
        <div class="p-5 flex flex-col justify-between">
            {{ form_row(form.title , {
                label: 'titre de l\'événement',
                'attr': {
                    'class': 'mb-5 flex flex-row justify-between pl-2 border-2 border-secondary w-full'
                }
            }) }}
            {{ form_row(form.description , {
                label: 'description de l\'événement',
                'attr': {
                    'class': 'mb-5 flex flex-row justify-between pl-2 border-2 border-secondary w-full'
                }
            }) }}
            {{ form_row(form.fiche , {
                label: 'fiche de l\'événement',
                'attr': {
                    'class': 'mb-5 flex flex-row justify-between pl-2 border-2 border-secondary w-full'
                }
            }) }}
            {{ form_row(form.programme , {
                label: 'programme de l\'événement',
                'attr': {
                    'class': 'mb-5 flex flex-row justify-between pl-2 border-2 border-secondary w-full'
                }
            }) }}
            {% if edit %}
                <button type="submit" class="mt-3 text-primary bg-secondary rounded-xl hover:bg-yellow-500/95 w-[75px] h-10">Enregistrer</button>
            {% else %}
                <button type="submit" class="mt-3 text-primary bg-secondary rounded-xl hover:bg-yellow-500/95 w-[75px] h-10">Ajouter</button>
            {% endif %}
        </div>
        {{ form_end(form) }}

        <div class="mt-15 h-16"></div>
    </main>

{% endblock %}

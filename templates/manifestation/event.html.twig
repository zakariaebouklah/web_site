{% extends 'base.html.twig' %}

{% block title %}

    {% if edit %}
        Modification
    {% else %}
        Nouveau Evenement
    {% endif %}

{% endblock %}

{% block main %}

    <main class="main mt-40">
        <div class="mt-15 h-16"></div>

        {{ form_start(form, {
            'attr': {
                'class': 'ml-16 mr-16 shadow-3xl dark:bg-white/5 rounded-xl h-full'
            }
        }) }}
        <div class="p-5 flex flex-col justify-between">
            {{ form_row(form.title , {
                label: 'titre de l\'événement',
                'attr': {
                    'class': 'mb-5 p-3 focus:outline-none shadow-inner rounded-xl dark:bg-white/10 bg-black/5 w-full'
                }
            }) }}
            {{ form_row(form.description , {
                label: 'description de l\'événement',
                'attr': {
                    'class': 'mb-5 p-3 focus:outline-none shadow-inner rounded-xl dark:bg-white/10 bg-black/5 w-full'
                }
            }) }}
            {{ form_row(form.fiche , {
                label: 'fiche de l\'événement',
                'attr': {
                    'class': 'mb-5 p-3 focus:outline-none shadow-inner rounded-xl dark:bg-white/10 bg-black/5 w-full'
                }
            }) }}
            {{ form_row(form.programme , {
                label: 'programme de l\'événement',
                'attr': {
                    'class': 'mb-5 p-3 focus:outline-none shadow-inner rounded-xl dark:bg-white/10 bg-black/5 w-full'
                }
            }) }}

            <button type="submit" class="mt-3 text-primary bg-secondary rounded-xl hover:bg-[#D19900] font-bold w-[105px] h-10 px-2.5">
                {% if edit %}
                    Enregistrer
                {% else %}
                    Ajouter
                {% endif %}

            </button>

        </div>
        {{ form_end(form) }}

        <div class="mt-15 h-16"></div>
    </main>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Suppression{% endblock %}

{% block main %}

    <main class="main">
        {{ form_start(form, {
            'attr' : {
                'id': 'the-delete-form',
                'class': 'mt-16 ml-16 mr-16 small:h-64 shadow-3xl rounded-xl dark:border-2 dark:border-secondary h-32 items-center text-center'
            }
        }) }}
        <div class="text-red-500 text-3xl">Etes vous sur de vouloir faire cette suppression?</div>
        {{ form_row(form.confirm, {
            label: 'Confirmer',
            'attr' : {
                'class': 'mt-3 text-primary bg-secondary rounded-xl hover:bg-red-500/95 w-[75px] h-10'
            }
        }) }}
        {{ form_end(form) }}
    </main>

{% endblock %}

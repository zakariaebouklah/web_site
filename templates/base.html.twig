<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/Lurigor.jpg') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link rel="stylesheet" href="{{ asset('styles/scrollbar.css') }}">
        <link rel="stylesheet" href="{{ asset('node_modules/@fortawesome/fontawesome-free/css/all.css') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {{ encore_entry_link_tags('scrollbar') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="dark:bg-primary dark:text-white transition-colors duration-300 flex flex-col justify-between overflow-x-hidden">
        {% if app.user %}
        <header class="fixed bg-secondary w-screen h-16 top-0 z-20">
            <div class="pt-3.5 pl-3.5">
                <a href="https://www.facebook.com/LaboratoireLURIGOR/" target="_blank">
                    <i class="fa-brands fa-facebook"></i>
                    <span class="hover:underline">La page Facebook</span>
                </a>
                <button id="btn" class="absolute top-5 right-7 w-10 h-5 rounded-2xl bg-white flex items-center transition duration-300 focus:outline-none shadow">
                    <div id="switch-toggle" class="w-6 h-6 relative rounded-full transition duration-500 transform bg-thirdly -translate-x-2 text-white">
                        <i class="fa-solid fa-lightbulb text-primary"></i>
                    </div>
                </button>
            </div>
        </header>
        <nav class="fixed bg-primary h-16 w-screen flex flex-row justify-between top-16 xl:h-24 z-20">
            <div class="text-center pt-3.5 ml-5">
                <div id="user" class="flex flex-row">
                    <i class="fa-solid fa-circle-user cursor-pointer text-3xl text-thirdly"></i>
                    <span class="ml-1 text-center text-base text-white p-2">{{ app.user.username }}</span>
                </div>
                <div class="bg-secondary w-40 h-24 rounded-xl invisible" id="user-modal">
                    <ul class="flex flex-col p-5">
                        <li class="">
                            <a href="{{ path("app_logout") }}" class="flex flex-row justify-between">
                                <span class="font-bold text-base xl:text-sm">Déconnexion</span>
                                <i class="fa-solid fa-right-from-bracket pt-[8px] text-blue-500"></i>
                            </a>
                        </li>
                        <li>
                            <a href="{{ path("app_user_edit", {"slug": app.user.slug}) }}" target="_blank" class="flex flex-row justify-between">
                                <span class="font-bold text-base xl:text-sm">Réglages</span>
                                <i class="fa-solid fa-gear pt-[8px] text-blue-500"></i>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
            <ul id="nav_ul" class="flex flex-row justify-evenly h-16 w-screen xl:h-24">
                <li data-common="items" class="text-secondary text-lg text-center pt-3.5 xl:text-base sm:text-xs"><a href="{{ path("app_accueil") }}">Accueil</a></li>
                <li data-common="items" class="text-secondary text-lg text-center pt-3.5 xl:text-base sm:text-xs"><a href="{{ path("app_us") }}">Qui sommes nous?</a></li>
                <li data-common="items" class="text-secondary text-lg text-center pt-3.5 xl:text-base sm:text-xs"><a href="{{ path("app_pub") }}">Publications scientifiques</a></li>
                <li data-common="items" class="text-secondary text-lg text-center pt-3.5 xl:text-base sm:text-xs"><a href="{{ path("app_manifestation") }}">Manifestations scientifiques</a></li>
                <li data-common="items" class="text-secondary text-lg text-center pt-3.5 xl:text-base sm:text-xs"><a href="{{ path("app_formation_doctorale") }}">Onboarding doctoring</a></li>
                <li data-common="items" class="text-secondary text-lg text-center pt-3.5 xl:text-base sm:text-xs"><a href="{{ path("app_themes") }}">Groupes d'intérêt thématique</a></li>
            </ul>
        </nav>
        <nav class="bg-white border-2 border-secondary text-primary w-screen h-32 flex flex-row mt-[127px] dark:bg-white dark:text-primary">
            <div class="flex flex-row justify-start h-16 w-1/2">
                <img src="{{ asset('images/ump.jpg') }}" alt="ump" class="w-1/2 h-[123px]">
                <img src="{{ asset('images/LURIGOR.jpg') }}" alt="LOGO" class="w-1/4 h-[123px]">
            </div>
            <ul class="flex flex-row justify-end justify-evenly h-16 w-1/2">
                <li class="mt-[39px] text-3xl">Rechercher  <i class="fa-solid fa-magnifying-glass"></i></li>
                <li class="mt-[39px] text-3xl">Menu
                    <button id="myBtn"><i class="fa-solid fa-bars"></i></button>
                </li>
            </ul>
        </nav>
        <div id="menu">
            <div id="myModal" class="modal hidden">
                <div class="modal-content">
                    <div>
                        <ul>
                            <li><a class="hover:text-green-800" href="{{ path("app_accueil") }}">Accueil</a></li>
                            <div class="border-b-4 border-secondary"></div>
                            <br>
                            <li><a class="hover:text-green-800" href="{{ path("app_us") }}">Qui sommes nous?</a></li>
                            <div class="border-b-4 border-secondary"></div>
                            <br>
                            <li><a class="hover:text-green-800" href="{{ path("app_pub") }}">Publications scientifiques</a></li>
                            <div class="border-b-4 border-secondary"></div>
                            <br>
                            <li><a class="hover:text-green-800" href="{{ path("app_manifestation") }}">Manifestations scientifiques</a></li>
                            <div class="border-b-4 border-secondary"></div>
                            <br>
                            <li><a class="hover:text-green-800" href="{{ path("app_formation_doctorale") }}">Onboarding doctoring</a></li>
                            <div class="border-b-4 border-secondary"></div>
                            <br>
                            <li><a class="hover:text-green-800" href="{{ path("app_themes") }}">Groupes d'intérêt thématique</a></li>
                            <div class="border-b-4 border-secondary"></div>
                            <br>
                        </ul>
                    </div>
                    <span class="close">&times;</span>
                </div>
            </div>
        </div>
        {% else %}
            <header class="bg-white shadow-3xl h-24 w-screen flex flex-row justify-between">
                <div>
                    <img class="h-[95px]" src="{{ asset('images/ump.jpg') }}" alt="UMP-FSJES">
                </div>
                <div class="flex flex-row justify-end pr-10">
                    <button class="mr-5 mt-3 text-primary bg-secondary rounded-xl hover:bg-yellow-500/95 w-[95px] h-10">
                        <a href="{{ path("app_login") }}">Connexion</a>
                    </button>
                    <button class="mt-3 text-primary bg-secondary rounded-xl hover:bg-yellow-500/95 w-[95px] h-10">
                        <a href="{{ path("app_register") }}">Inscription</a>
                    </button>
                </div>
            </header>
        {% endif %}
        {% block main %}{% endblock %}
            {% if not app.user %}
                <footer class="flex flex-col text-center items-center justify-center dark:bg-secondary dark:text-black h-16">
                    Copyright © LURIGOR <script>document.write(new Date().getFullYear())</script>. Tous les droits sont réservés.
                </footer>
                <!-- Made By Zakariae Bouklah : https://zakariaebouklah.github.io/ -->
            {% endif %}
        {% block footer %}{% endblock %}
    </body>
</html>

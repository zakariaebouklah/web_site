<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/Lurigor.jpg') }}">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link rel="stylesheet" href="{{ asset('styles/scrollbar.css') }}">
        <link rel="stylesheet" href="{{ asset('node_modules/@fortawesome/fontawesome-free/css/all.css') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
            {{ encore_entry_link_tags('scrollbar') }}
        {% endblock %}
        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="dark:bg-primary dark:text-white transition-colors duration-300">
        {% if app.user %}
        <header class="fixed bg-secondary w-screen h-16 top-0">
            <div class="pt-3.5 pl-3.5">
                <a href="https://www.facebook.com/LaboratoireLURIGOR/" target="_blank">
                    <i class="fa-brands fa-facebook"></i>
                    <span class="hover:underline">La page Facebook</span>
                </a>
                <button id="btn" class="absolute top-5 right-7 w-10 h-5 md:w-12 md:h-6 rounded-2xl bg-white flex items-center transition duration-300 focus:outline-none shadow">
                    <div id="switch-toggle" class="w-6 h-6 md:w-7 md:h-7 relative rounded-full transition duration-500 transform bg-thirdly -translate-x-2 pt-1 pl-0.5 text-white">
                        <svg xmlns="http://www.w3.org/2000/svg" width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="#0e166c" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="5"/><path d="M12 1v2M12 21v2M4.2 4.2l1.4 1.4M18.4 18.4l1.4 1.4M1 12h2M21 12h2M4.2 19.8l1.4-1.4M18.4 5.6l1.4-1.4"/></svg>
                    </div>
                </button>
            </div>
        </header>
        <nav class="fixed bg-primary h-16 w-screen flex flex-row justify-between top-16">
            <ul id="nav_ul" class="flex flex-row justify-evenly h-16 w-screen">
                <li data-common="items" class="text-secondary text-lg text-center pt-3.5"><a href="{{ path("app_accueil") }}">Accueil</a></li>
                <li data-common="items" class="text-secondary text-lg text-center pt-3.5"><a href="{{ path("app_us") }}">Qui sommes nous?</a></li>
                <li data-common="items" class="text-secondary text-lg text-center pt-3.5"><a href="{{ path("app_pub") }}">Publications scientifiques</a></li>
                <li data-common="items" class="text-secondary text-lg text-center pt-3.5"><a href="{{ path("app_manifestation") }}">Manifestations scientifiques</a></li>
                <li data-common="items" class="text-secondary text-lg text-center pt-3.5"><a href="{{ path("app_formation_doctorale") }}">Formation doctorale</a></li>
                <li data-common="items" class="text-secondary text-lg text-center pt-3.5"><a href="{{ path("app_themes") }}">Groupes d'intérêt thématique</a></li>
            </ul>
        </nav>
        <nav class="bg-white border-2 border-secondary text-primary w-screen h-32 flex flex-row mt-[127px] dark:bg-white dark:text-primary">
            <div class="flex flex-row justify-start h-16 w-1/2">
                <img src="{{ asset('images/ump.jpg') }}" alt="ump" class="w-1/2 h-[123px]">
                <img src="{{ asset('images/LURIGOR.jpg') }}" alt="LOGO" class="w-1/4 h-[123px]">
            </div>
            <ul class="flex flex-row justify-end justify-evenly h-16 w-1/2">
                <li class="mt-[39px] text-3xl">Rechercher  <i class="fa-solid fa-magnifying-glass"></i></li>
                <li class="mt-[39px] text-3xl">Menu
                    <button id="myBtn"><i class="fa-solid fa-bars"></i></button>
                </li>
            </ul>
        </nav>
        <div id="menu">
            <div id="myModal" class="modal hidden">
                <div class="modal-content">
                    <div>
                        <ul>
                            <li><a class="hover:text-green-800" href="{{ path("app_accueil") }}">Accueil</a></li>
                            <div class="border-b-4 border-secondary"></div>
                            <br>
                            <li><a class="hover:text-green-800" href="{{ path("app_us") }}">Qui sommes nous?</a></li>
                            <div class="border-b-4 border-secondary"></div>
                            <br>
                            <li><a class="hover:text-green-800" href="{{ path("app_pub") }}">Publications scientifiques</a></li>
                            <div class="border-b-4 border-secondary"></div>
                            <br>
                            <li><a class="hover:text-green-800" href="{{ path("app_manifestation") }}">Manifestations scientifiques</a></li>
                            <div class="border-b-4 border-secondary"></div>
                            <br>
                            <li><a class="hover:text-green-800" href="{{ path("app_formation_doctorale") }}">Formation doctorale</a></li>
                            <div class="border-b-4 border-secondary"></div>
                            <br>
                            <li><a class="hover:text-green-800" href="{{ path("app_themes") }}">Groupes d'intérêt thématique</a></li>
                            <div class="border-b-4 border-secondary"></div>
                            <br>
                        </ul>
                    </div>
                    <span class="close">&times;</span>
                </div>
            </div>
        </div>
        {% else %}
            <header class="bg-thirdly h-16 w-screen">
                <div class="flex flex-row justify-end pr-10">
                    <button class="mr-5 mt-3 text-primary bg-secondary rounded-xl hover:bg-yellow-500/95 w-[75px] h-10">
                        <a href="{{ path("app_login") }}">Login</a>
                    </button>
                    <button class="mt-3 text-primary bg-secondary rounded-xl hover:bg-yellow-500/95 w-[75px] h-10">
                        <a href="{{ path("app_register") }}">Register</a>
                    </button>
                </div>
            </header>
        {% endif %}
        {% block body %}{% endblock %}
    </body>
</html>

{% extends 'base.html.twig' %}

{% block title %}Modifiez La photo de profile{% endblock %}

{% block main %}

    <main class="main mt-40">
        <div class="mt-15 h-16"></div>

        {{ form_start(form, {
            'attr': {
                'class': 'ml-16 mr-16 shadow-3xl rounded-xl dark:bg-white/5 h-full dark:border-green-500'
            }
        }) }}
        <div class="p-5 flex flex-col justify-between">
            {{ form_row(form.profile , {
                label: 'Choisir une photo de profile',
                'attr': {
                    'class': 'mb-5 p-3 focus:outline-none shadow-inner rounded-xl dark:bg-white/10 bg-black/5 w-full'
                }
            }) }}
            <button type="submit" class="mt-3 text-primary bg-secondary rounded-xl hover:bg-[#D19900] w-[125px] h-10 font-bold">Sauvegarder</button>
        </div>
        {{ form_end(form) }}

        <div class="mt-15 h-16"></div>
    </main>

{% endblock %}

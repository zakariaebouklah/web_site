{% extends 'base.html.twig' %}

{% block title %}Modifiez Vos Donn√©es{% endblock %}

{% block main %}

    <main class="main">
        <div class="mt-15 h-16"></div>

        {{ form_start(form, {
            'attr': {
                'class': 'ml-16 mr-16 border-2 border-black h-full dark:border-green-500'
            }
        }) }}
        <div class="p-5 flex flex-col justify-between">
            {{ form_row(form.username , {
                label: 'Nouveau nom d\'utilisateur',
                'attr': {
                    'class': 'mb-5 flex flex-row justify-between pl-2 border-2 border-secondary w-full'
                }
            }) }}
            {{ form_row(form.old_password , {
                label: 'Ancien mot de passe',
                'attr': {
                    'class': 'mb-5 flex flex-row justify-between pl-2 border-2 border-secondary w-full'
                }
            }) }}
            {{ form_row(form.password , {
                label: 'Nouveau mot de passe',
                'attr': {
                    'class': 'mb-5 flex flex-row justify-between pl-2 border-2 border-secondary w-full'
                }
            }) }}
            {{ form_row(form.confirm_new_password , {
                label: 'Confirmer le nouveau mot de passe',
                'attr': {
                    'class': 'mb-5 flex flex-row justify-between pl-2 border-2 border-secondary w-full'
                }
            }) }}
            <button type="submit" class="mt-3 text-primary bg-secondary rounded-xl hover:bg-yellow-500/95 w-[95px] h-10">Soumettre</button>
        </div>
        {{ form_end(form) }}

        <div class="mt-15 h-16"></div>
    </main>

{% endblock %}

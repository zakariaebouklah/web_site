{% extends 'base.html.twig' %}

{% block title %}

    {% if edit %}
        Modification d'Article...
    {% else %}
        Ajout d'un nouveau article
    {% endif %}

{% endblock %}

{% block main %}

    <main class="main mt-40">
        <div class="mt-15 h-16"></div>

        {{ form_start(form, {
            label: 'titre de l\'article',
            'attr': {
                'class': 'ml-16 mr-16 bg-white shadow-3xl rounded-xl dark:bg-white/5 h-full'
            }
        }) }}
        <div class="p-5 flex flex-col justify-between">
            {{ form_row(form.title , {
                label: 'Titre de l\'article',
                'attr': {
                    'class': 'mb-5 p-3 focus:outline-none shadow-inner rounded-xl dark:border-2 dark:border-secondary bg-black/5 w-full'
                }
            }) }}
            {{ form_row(form.content , {
                label: 'Contenu de l\'article',
                'attr': {
                    'class': 'mb-5 flex flex-row justify-between pl-2 border-2 border-secondary w-full'
                }
            }) }}
            {{ form_row(form.category , {
                label: 'Categorie de l\'article',
                'attr': {
                    'class': 'mb-5 p-3 focus:outline-none shadow-inner rounded-xl dark:border-2 dark:border-secondary bg-black/5 w-full'
                }
            }) }}
            <button type="submit" class="mt-3 text-primary bg-secondary rounded-xl hover:bg-[#D19900] font-bold w-[95px] h-10">
                {% if edit %}
                    Enregistrer
                {% else %}
                    Ajouter
                {% endif %}
            </button>
        </div>
        {{ form_end(form) }}

        <div class="mt-15 h-16"></div>
    </main>

{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}Editer{% endblock %}

{% block main %}

    <main class="main">
        <div>
            {{ form_start(form, {
                'attr' : {
                    'class': 'ml-16 mr-16'
                }
            }) }}
            {{ form_row(form.content, {
                label: 'Editez Votre Commentaire...',
                'attr': {
                    'placeholder': 'Bon Article...',
                    'class': 'mb-5 flex flex-row justify-between pl-2 border-2 border-secondary w-full'
                }
            }) }}
            <button type="submit" class="mt-3 text-primary bg-secondary rounded-xl hover:bg-yellow-500/95 w-[75px] h-10"><i class="fa-solid fa-check"></i></button>
            {{ form_end(form) }}
        </div>
    </main>

{% endblock %}
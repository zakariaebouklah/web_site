{% extends 'base.html.twig' %}

{% block title %}

    {% if edit %}
        Modification d'Ouvrage...
    {% else %}
        Ajout d'un nouveau ouvrage
    {% endif %}

{% endblock %}

{% block main %}

    <main class="main mt-40">
        <div class="mt-15 h-16"></div>

        {{ form_start(form, {
            'attr': {
                'class': 'ml-16 mr-16 bg-white shadow-3xl rounded-xl dark:bg-white/5 h-full'
            }
        }) }}
        <div class="p-5 flex flex-col justify-between">
            {{ form_row(form.title , {
                label: 'titre de l\'ouvrage',
                'attr': {
                    'class': 'mb-5 p-3 focus:outline-none shadow-inner rounded-xl dark:bg-white/10 bg-black/5 w-full'
                }
            }) }}
            {{ form_row(form.document , {
                label: 'contenu de l\'ouvrage',
                'attr': {
                    'class': 'mb-5 p-3 focus:outline-none shadow-inner rounded-xl dark:bg-white/10 bg-black/5 w-full'
                }
            }) }}
            <button type="submit" class="mt-3 text-primary bg-secondary rounded-xl hover:bg-[#D19900] w-[85px] h-10 font-bold small:text-xs small:font-bold">
                {% if edit %}
                    Enregistrer
                {% else %}
                    Ajouter
                {% endif %}
            </button>

        </div>
        {{ form_end(form) }}

        <div class="mt-15 h-16"></div>
    </main>

{% endblock %}

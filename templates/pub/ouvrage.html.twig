{% extends 'base.html.twig' %}

{% block title %}

    {% if edit %}
        Modification d'Ouvrage...
    {% else %}
        Ajout d'un nouveau ouvrage
    {% endif %}

{% endblock %}

{% block body %}

    <div class="mt-15 h-16"></div>

    {{ form_start(form, {
        label: 'titre de l\'ouvrage',
        'attr': {
            'class': 'ml-16 mr-16 border-2 border-black h-full'
        }
    }) }}
    <div class="p-5 flex flex-col justify-between">
        {{ form_row(form.title , {
            label: 'titre de l\'ouvrage',
            'attr': {
                'class': 'mb-5 flex flex-row justify-between pl-2 border-2 border-secondary w-full'
            }
        }) }}
        {{ form_row(form.document , {
            label: 'contenu de l\'ouvrage',
            'attr': {
                'class': 'mb-5 flex flex-row justify-between pl-2 border-2 border-secondary w-full'
            }
        }) }}
        {% if edit %}
            <button type="submit" class="mt-3 text-primary bg-secondary rounded-xl hover:bg-yellow-500/95 w-[75px] h-10">Enregistrer</button>
        {% else %}
            <button type="submit" class="mt-3 text-primary bg-secondary rounded-xl hover:bg-yellow-500/95 w-[75px] h-10">Ajouter</button>
        {% endif %}
    </div>
    {{ form_end(form) }}

    <div class="mt-15 h-16"></div>

{% endblock %}
